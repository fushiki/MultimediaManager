        <FileSystemTreeViews:FileSystemTreeView HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="290" DataContext="{Binding Path=Left}"/>
        <FileSystemTreeViews:FileSystemTreeView HorizontalAlignment="Left" Margin="315,10,0,0" VerticalAlignment="Top" Height="290" DataContext="{Binding Path=Right}"/>

    </Grid>
