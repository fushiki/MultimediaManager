             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:FileSystemTreeViews="clr-namespace:MultimediaManager.Core.FileSystemTreeViews;assembly=MultimediaManager.Core" x:Class="MultimediaManager.Views.TestDragAndDropView" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="635">
